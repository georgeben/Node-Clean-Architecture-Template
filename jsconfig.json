{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "test": ["src/test/*"],
      "src": ["src/*"],
      "app": ["src/app/*"],
      "config": ["src/config/*"],
      "domain": ["src/domain/*"],
      "infra": ["src/infra/*"],
      "helpers": ["src/helpers/*"],
      "common": ["src/common/*"],
      "interfaces": ["src/interfaces/*"],
      "routes": ["src/interfaces/http/routes/*"],
      "controllers": ["src/interfaces/http/controllers/*"],
      "middleware": ["src/interfaces/http/middleware/*"],
      "errors": ["src/interfaces/http/errors"],
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist", "doc", "client"]
}